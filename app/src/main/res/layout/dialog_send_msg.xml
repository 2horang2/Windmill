<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/item_chat"
    android:orientation="vertical" android:layout_width="250dp"
    android:layout_height="wrap_content">

    <TextView
        android:textColor="@color/icon_color"
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현재 보유 포인트 : 500"
        android:id="@+id/textView9"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="17sp"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="쪽지를 보내시면 100포인트가 차감됩니다. 보내시겠습니까?"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView9"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="#FFF"
            android:background="@drawable/button_gui5_sel3"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="확인"
            android:id="@+id/button4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:textColor="@color/icon_color"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/item_point"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="취소"
            android:id="@+id/button5"
            android:layout_alignTop="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:layout_toEndOf="@+id/button4" />
    </RelativeLayout>
</RelativeLayout>