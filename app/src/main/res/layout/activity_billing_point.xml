<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF"
    android:layout_height="match_parent"
    tools:context=".InAppBillingActivity">

    <RelativeLayout
        android:id="@+id/myp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 포인트: " />

            <TextView
                android:id="@+id/pp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/tt"
                android:text="500 "
                android:textColor="@color/icon_color" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_below="@+id/myp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow"/>

    <TextView
        android:drawableLeft="@drawable/like"
        android:textSize="17sp"
        android:layout_margin="10dp"
        android:textColor="@color/icon_color"
        android:layout_below="@+id/myp"
        android:id="@+id/tv"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="  포인트 충전"/>
    <RelativeLayout
        android:id="@+id/pp1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:onClick="p1000"
            android:id="@+id/p1000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r1"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/reply_img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000원"/>

        </RelativeLayout>
        <View
            android:layout_below="@+id/p1000"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@drawable/shadow"/>


        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:onClick="5000"
            android:layout_toRightOf="@+id/p1000"
            android:id="@+id/p5000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r2"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:text="2,500 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5,000원"/>

        </RelativeLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/p5000"
            android:layout_alignLeft="@+id/p5000"
            android:layout_alignStart="@+id/p5000" />

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:onClick="p10000"
            android:layout_toRightOf="@+id/p5000"
            android:id="@+id/p10000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r3"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:text="6,000 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10,000원"/>

        </RelativeLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/p10000"
            android:layout_alignLeft="@+id/p10000"
            android:layout_alignStart="@+id/p10000" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout3">

        <RelativeLayout
            android:onClick="p30000"
            android:id="@+id/p30000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r4"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:text="20,000 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30,000원"/>

        </RelativeLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@drawable/shadow"
            android:layout_below="@+id/p30000" />


        <RelativeLayout android:layout_marginLeft="10dp"
            android:onClick="p50000"
            android:layout_toRightOf="@+id/p30000"
            android:id="@+id/p50000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r5"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:text="35,000 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50,000원"
                android:id="@+id/textView13" />

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@drawable/shadow"
                android:layout_below="@+id/textView13"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>


        <RelativeLayout android:layout_marginLeft="10dp"
            android:onClick="p100000"
            android:layout_toRightOf="@+id/p50000"
            android:id="@+id/p100000"
            android:background="@drawable/item_point"
            android:layout_width="100dp"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_centerHorizontal="true"
                android:id="@+id/r6"
                android:layout_width="70dp"
                android:layout_height="70dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/cir"
                    android:scaleType="centerCrop"
                    app:riv_border_color="@android:color/white"
                    app:riv_border_width="2dp"
                    app:riv_oval="true" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:textColor="@color/main_dark1"
                    android:textStyle="bold"
                    android:text="80,000 P"/>
            </RelativeLayout>
            <View
                android:layout_below="@+id/r6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shadow"/>
            <TextView
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100,000원"
                android:id="@+id/textView14" />

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="@drawable/shadow"
                android:layout_below="@+id/textView14"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_marginTop="30dp"
        android:layout_below="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow"/>

</RelativeLayout>