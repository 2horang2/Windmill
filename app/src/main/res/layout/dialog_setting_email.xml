<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="350dp"
    android:padding="10dp"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout

        android:layout_marginRight="10dp"
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"

        android:theme="@style/Theme.App.Base2">

        <android.support.v7.widget.AppCompatEditText
            android:drawableRight="@drawable/pw"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="현재 비밀번호"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textColorHint="@color/black" />
    </android.support.design.widget.TextInputLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/o"
            android:textColor="#FFF"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="변경"
            android:background="@drawable/button_gui5_sel3"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/x"
            android:textColor="@color/icon_color"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="취소"
            android:background="@drawable/item_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>