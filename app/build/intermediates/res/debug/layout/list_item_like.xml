<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="140dp">

    <TextView
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="34dp"
        android:background="#10000000"
        android:layout_height="140dp" />
    <ImageView
        android:id="@+id/heart"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/like_heart"
        android:layout_width="20dp"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:text="날짜"
        android:layout_toRightOf="@+id/heart"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:padding="1dp"
        android:layout_toRightOf="@+id/line"
        android:layout_below="@+id/date"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:src="@drawable/recipe"
                android:scaleType="centerCrop"
                android:layout_width="130dp"
                android:id="@+id/img"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/user"
                android:textColor="@color/deep_orange"
                android:layout_width="wrap_content"
                android:text="사람"
                android:layout_toRightOf="@+id/img"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/mountain"
                android:layout_width="wrap_content"
                android:text="산"
                android:layout_below="@+id/user"
                android:layout_toRightOf="@+id/img"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12sp"
                android:lines="1"
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:text="주소"
                android:textColor="@color/gray"
                android:layout_below="@+id/mountain"
                android:layout_toRightOf="@+id/img"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout><!-- From: file:/C:/Users/jhm1283/Desktop/android/Windmill3_new_ver12%20(8)/app/src/main/res/layout/list_item_like.xml -->