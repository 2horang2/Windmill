<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.fragment.MeetingSearchFragment">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/ed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/nliveo_indigo_colorPrimaryDark"
                android:theme="@style/Theme.App.Base">

                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/ed2"
                    android:lines="1"
                    android:drawableRight="@drawable/ic_search_white_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="검색어를 입력해주세요"
                    android:textColor="@color/nliveo_indigo_colorPrimaryDark"
                    android:textColorHint="@color/nliveo_indigo_colorPrimaryDark" />
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scroll"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:clipToPadding="false"
        android:paddingBottom="@dimen/spacing_medium"
        android:scrollbars="none" />
</LinearLayout>
