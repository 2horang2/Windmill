<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="windmill.windmill.MeetingFilter">

    <RelativeLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="모임 필터"
            android:textColor="#cc000000" />

        <Button
            android:id="@+id/reset"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_gui5"

            android:text="초기화"
            android:textColor="@color/main_dark1" />
    </RelativeLayout>

    <View
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/filter"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />


    <RelativeLayout
        android:id="@+id/member"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/aaa"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="인원"
            android:textColor="#cc000000" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/member_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/member"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/member_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gui5_sel2"
            android:text="전체"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/member_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/member_0"
            android:background="@drawable/button_gui5"
            android:text="~10명"
            android:textColor="@color/main" />

        <Button
            android:id="@+id/member_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/member_1"
            android:background="@drawable/button_gui5"
            android:text="11~30명"
            android:textColor="@color/main" />

        <Button
            android:id="@+id/member_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/member_2"
            android:background="@drawable/button_gui5"
            android:text="31~명"
            android:textColor="@color/main" />


    </RelativeLayout>


    <View
        android:id="@+id/aaaa"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/member_btn"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />


    <RelativeLayout
        android:id="@+id/region"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/aaaa"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="지역"
            android:textColor="#cc000000" />


    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/aaaaa"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />
    <RelativeLayout
        android:id="@+id/region_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/region"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <Button
            android:padding="10dp"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_add_white_24dp"
            android:id="@+id/region_0"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_gui5_sel2"
            android:text="전체"
            android:textColor="@color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/region_btn2"
            android:layout_below="@+id/region_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_1"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gui5"
                android:text="경기도"
                android:textColor="@color/main" />

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/region_1"
                android:background="@drawable/button_gui5"
                android:text="강원도"
                android:textColor="@color/main" />

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/region_2"
                android:background="@drawable/button_gui5"
                android:text="충청도"
                android:textColor="@color/main" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:id="@+id/region_btn3"
            android:layout_below="@+id/region_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_gui5"
                android:text="전라도"
                android:textColor="@color/main" />

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/region_4"
                android:background="@drawable/button_gui5"
                android:text="경상도"
                android:textColor="@color/main" />

            <Button
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/mountain2"
                android:padding="10dp"
                android:id="@+id/region_6"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/region_5"
                android:background="@drawable/button_gui5"
                android:text="제주도"
                android:textColor="@color/main" />

        </LinearLayout>



    </RelativeLayout>


    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/aaaaa"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />
    <LinearLayout
        android:id="@+id/aaaaa"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/x"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="취소"/>
        <View

            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />
        <TextView
            android:id="@+id/o"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="완료"/>
    </LinearLayout>
</RelativeLayout>
