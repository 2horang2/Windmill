<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="windmill.windmill.MeetingFilter">

    <RelativeLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="모임 필터"
            android:textColor="#cc000000" />

        <Button
            android:id="@+id/reset"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_gui5"

            android:text="초기화"
            android:textColor="@color/main_dark1" />
    </RelativeLayout>

    <View
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/filter"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />

    <ScrollView
        android:id="@+id/sc"
        android:layout_below="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aaaaa">

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="40dp"

                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="지역"
                    android:textColor="#cc000000" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/region_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/region"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/region_0"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_gui5_sel2"
                    android:drawableLeft="@drawable/ic_add_white_24dp"
                    android:padding="10dp"
                    android:text="전체"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/region_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/region_0"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/region_1"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="경기도"
                        android:textColor="@color/main" />

                    <Button
                        android:id="@+id/region_2"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/region_1"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="강원도"
                        android:textColor="@color/main" />

                    <Button
                        android:id="@+id/region_3"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/region_2"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="충청도"
                        android:textColor="@color/main" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/region_btn3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/region_btn2"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/region_4"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="전라도"
                        android:textColor="@color/main" />

                    <Button
                        android:id="@+id/region_5"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/region_4"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="경상도"
                        android:textColor="@color/main" />

                    <Button
                        android:id="@+id/region_6"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/region_5"
                        android:layout_weight="1"
                        android:background="@drawable/button_gui5"
                        android:drawableLeft="@drawable/mountain2"
                        android:padding="10dp"
                        android:text="제주도"
                        android:textColor="@color/main" />

                </LinearLayout>


            </RelativeLayout>


            <View
                android:id="@+id/aaaa"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/region_btn"
                android:layout_margin="2dp"
                android:background="@drawable/shadow" />


            <RelativeLayout
                android:id="@+id/season"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/aaaa"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="높이별 검색"
                    android:textColor="#cc000000" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/season_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season"
                android:layout_marginBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">


                <EditText
                    android:text="0"
                    android:layout_toLeftOf="@+id/g"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_re"
                    android:id="@+id/to"/>

                <TextView
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/g"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="~"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:text="2000"
                    android:layout_toRightOf="@+id/g"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_re"
                    android:id="@+id/from"/>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <View

        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/aaaaa"
        android:layout_margin="2dp"
        android:background="@drawable/shadow" />

    <LinearLayout
        android:id="@+id/aaaaa"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/x"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="취소" />

        <View

            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@drawable/shadow" />

        <TextView
            android:id="@+id/o"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="완료" />
    </LinearLayout>
</RelativeLayout>
