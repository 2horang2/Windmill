<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/transparent"
    android:padding="5dp">

    <RelativeLayout

        android:id="@+id/rr"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_gui5_sel3">

        <ImageView
            android:id="@+id/img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/chat_on" />

        <Button
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:layout_margin="2dp"
            android:background="@color/transparent"
            android:text="채팅방"
            android:textColor="#FFF" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="80dp"

        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_gui5_sel3">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/kakao" />

        <Button
            android:id="@+id/kaka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_margin="2dp"
            android:background="@color/transparent"
            android:text="카카오톡"
            android:textColor="#FFF" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="80dp"

        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/button_gui5_sel3">

        <ImageView
            android:id="@+id/img3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/sms" />

        <Button
            android:id="@+id/sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img3"
            android:layout_margin="2dp"
            android:background="@color/transparent"
            android:text="SMS"
            android:textColor="#FFF" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/C:/Users/jhm1283/Desktop/android/Windmill3_new_ver12%20(8)/app/src/main/res/layout/dialog_mountain_share.xml -->