<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/reply_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        app:riv_border_color="@android:color/white"
        app:riv_border_width="2dp"
        app:riv_oval="true" />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
android:textStyle="bold"
        android:id="@+id/reply_user"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_alignTop="@+id/reply_img"
        android:layout_toEndOf="@+id/reply_img" />

    <TextView
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/reply_img"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/reply_text"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/reply_user" />

    <TextView
        android:layout_marginTop="2dp"
        android:textColor="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/reply_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
         />

</RelativeLayout><!-- From: file:/C:/Users/jhm1283/Desktop/android/Windmill3_new_ver12%20(8)/app/src/main/res/layout/list_item_reply.xml -->